generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ROLES {
  ADMIN
  USER
}

model User {
  id       String @id @default(uuid())
  username String
  email    String @unique
  role     ROLES  @default(USER)
}

model Mosque {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Visitor {
  id           String   @id @default(uuid())
  name         String
  phone_number String
  last_visit   DateTime
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}
